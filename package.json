import './App.css';
import React, { useState } from 'react';

const LaunchPadPointWebsite = () => {
  const [isDyslexiaFont, setIsDyslexiaFont] = useState(false);
  const [isADHDFont, setIsADHDFont] = useState(false);

  // Font helper function
  const getFontClass = () => {
    if (isDyslexiaFont) return 'font-mono';
    if (isADHDFont) return 'font-sans';
    return 'font-serif';
  };

  return (
    <div className={`hero ${getFontClass()}`}>
      <img src="/rocket-icon.png" alt="Rocket" className="rocket" />
      <h1>Welcome aboard, Captain Herb</h1>
      <p>Your resume is ready for liftoff. Letâ€™s launch your career into orbit.</p>
      <button className="launch-button">Launch Resume</button>

      <div className="font-toggle">
        <label>
          <input
            type="checkbox"
            checked={isDyslexiaFont}
            onChange={() => {
              setIsDyslexiaFont(!isDyslexiaFont);
              setIsADHDFont(false);
            }}
          />
          Dyslexia Font
        </label>
        <label>
          <input
            type="checkbox"
            checked={isADHDFont}
            onChange={() => {
              setIsADHDFont(!isADHDFont);
              setIsDyslexiaFont(false);
            }}
          />
          ADHD Font
        </label>
      </div>
    </div>
  );
};

export default LaunchPadPointWebsite;
